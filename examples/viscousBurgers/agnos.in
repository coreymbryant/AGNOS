[parallel]
physicsNodeSize = 2
[]

[driver]
maxIter = '8'
[]

[parameters]
dimension = '2'
types ='UNIFORM UNIFORM'
mins = '-1.0 -1.0'
maxs = '1.0 1.0'
[]

[adaptive]
refinePhysical = true
refineSurrogate = true
[]

[physics]
type = 'viscousBurgers'
min = '-10.0'
max = '10.0'

n = '4'
useUniformRefinement = false
numberHRefinements = '1'
numberPRefinements = '0'
maxRefineSteps ='15'

nNonlinearSteps='15'
nonlinearTolerance='1.e-9'

resolveAdjoint = false
[]


[surrogateModel]
type = 'PseudoSpectralTensorProduct'
order = '0'
errorOrder = '1'
[]

[output]
filename = './testFile.dat'
solutions = 'primal adjoint qoi'
coefficients        = 1
errorCoefficients   = 1
points              = 1
weights             = 1
index_set           = 1
[]
